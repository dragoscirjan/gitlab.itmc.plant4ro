template(bindable='router')
	header
		nav.navbar.navbar-fixed-top(role='navigation')
			.navbar-header
				button.navbar-toggler(type='button')               
					span.icon-bar            
					span.icon-bar             
					span.icon-bar
					span.icon-bar

				a.navbar-brand(href='#')            
					img(src='/dist/assets/img/logo.png', alt='${router.title} Logo')

				.navbar-wrapper
					ul.nav.navbar-nav
						li(repeat.for='row of router.navigation', class="${row.isActive ? 'active' : ''}")
							a(data-toggle='collapse', data-target='#skeleton-navigation-navbar-collapse.in', href.bind='row.href') ${row.title}
					//
						<ul class="nav navbar-nav navbar-right">
						<li class="loader" if.bind="router.isNavigating">
						<i class="fa fa-spinner fa-spin fa-2x"></i>
						</li>
						</ul>
